  <div class="ml-3">welcome back, {{userIn}}!</div>
  <div class="ml-3 mb-2">your user id is: {{user_id}}</div>
{{else}}
  <div>{{userIn}} is not currently logged in</div>
{{/if}}

{{! home menu for historiography }}
<div class="card text-center">
  <div class="card-header pl-3">
    <ul class="nav nav-tabs card-header-tabs">
      <li class="nav-item">
        <a class="btn btn-outline-secondary nav-link active" id="add-new">add
          new</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="/home">all notes</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" href="">my fields</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active" id="delete-note" href="">delete note</a>
      </li>

    </ul>
  </div>
</div>

<div class="row">
  {{! below is the column for the note stack }}
  <div class="flex-column note-box-container">
    {{#each books as |book|}}
      <div class="card select-book btn" style="width: 273px" id={{book.id}}>
        {{!-- {{#each bookNotes as |book|}} --}}
        <div class="card-body">
          <h5 class="card-title">{{book.title}}</h5>
          <h6 class="card-text">by {{book.author}}</h6>
        </div>
      </div>
    {{/each}}
  </div>

  <div class="col flex-grow-1 pl-0">
    {{! add a new note div }}
    <form value={{user_id}} class="getId">
      <div class="form-group">
        <label for="noteTitle">title</label>
        <input
          type="title"
          class="form-control"
          id="note-title"
          placeholder="enter your book title"
        />
      </div>
      <div class="form-group">
        <label for="noteAuthor">author</label>
        <input
          type="author"
          class="form-control"
          id="note-author"
          placeholder="enter the author's first and last name"
        />
      </div>
      <div class="form-group">
        <label for="noteTitle">field</label>
        <input
          type="field"
          class="form-control"
          id="note-field"
          placeholder="field or sub-discipline"
        />
      </div>
      <div class="form-group">
        <label for="textarea">argument</label>
        <textarea
          class="form-control"
          id="note-argument"
          rows="5"
          placeholder="what is the main argument?"
        ></textarea>
      </div>
      <div class="form-group">
        <label for="textarea">examples</label>
        <textarea
          class="form-control"
          id="note-examples"
          rows="5"
          placeholder="identify and explain key examples from the text that reinforce the author's main argument"
        ></textarea>
      </div>
      <div class="form-group">
        <label for="textarea">methodology</label>
        <textarea
          class="form-control"
          id="note-methods"
          rows="5"
          placeholder="describe the author's methods and sources. what are their theories and frameworks? how is evidence used and sources read?"
        ></textarea>
      </div>
      <div class="form-group">
        <label for="noteKeywords">keywords</label>
        <input
          type="title"
          class="form-control"
          id="note-keywords"
          placeholder="list out the main keywords and concepts"
        />
      </div>
      <div class="form-group">
        <label for="textarea">significance</label>
        <textarea
          class="form-control"
          id="note-significance"
          rows="5"
          placeholder="what interventions does this book make and in which fields? what is unique about the argument, evidence, methods, or sources? why is this book significant, or why not?"
        ></textarea>
      </div>
      <div class="text-center">
        <button
          class="btn btn-outline-primary"
          id="save-note"
          type="submit"
        >save note</button>
      </div>
    </form>

    {{! displayed note }}
    <div class="display-note-container">
      <nav class="navbar navbar-light bg-light">
        <a class="navbar-brand ml-4" href="#">
          <h2 id="bookTitle" class="text-wrap mb-3">{{firstBook.title}}</h2>
          <h3 id="authorName">by {{firstBook.author}}</h3>
        </a>
        {{! dropdown for full note view }}

        <ul class="navbar-nav">
          <li class="nav-item dropdown">
            <a
              class="nav-link dropdown-toggle"
              href="#"
              id="navbarDarkDropdownMenuLink"
              role="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              Menu
            </a>
            <ul
              class="dropdown-menu dropdown-menu-dark"
              aria-labelledby="navbarDarkDropdownMenuLink"
            >
              {{! <li><a class="dropdown-item" href="#" id="edit-note">edit note</a></li> }}
              <li><a class="dropdown-item" href="#" ">delete note</a></li>
              <li><a class="dropdown-item" href="#" id="important-note">mark
                  *important*</a></li>
            </ul>
          </li>
        </ul>

      </nav>

      {{! displayed book note }}
      <div class="col ml-4">
        <h4>argument</h4>
        <p id="argument-text">{{firstBook.argument}}</p>
        <h4>examples</h4>
        <p id="example-text">{{firstBook.examples}}</p>
        <h4>methods and sources</h4>
        <p id="methods-text">{{firstBook.methods}}</p>
        <h4>keywords</h4>
        <p id="keyword-text">{{firstBook.keywords}}</p>
        <h4>significance</h4>
        <p id="significance-text">{{firstBook.significance}}</p>
      </div>
    </div>

