<div class="row">
    {{!-- below is the column for the note stack --}}
    <div class="flex-column note-box-container">
        {{#each books as |book|}}
        <div class="card select-book btn" style="width: 273px">
        {{!-- {{#each bookNotes as |book|}} --}}
            <div class="card-body">
                <h5 class="card-title">{{book.title}}</h5>
                <h6 class="card-text">by {{book.author}}</h6>
            </div>
         </div>
         {{/each}}
    </div>

{{!-- view of individual note selected --}}
<div class="col flex-grow-1">
    {{!-- add a new note div --}}
    <form>
        <div class="form-group">
            <label for="noteTitle">title</label>
            <input type="title" class="form-control" id="note-title" placeholder="enter your book title">
        </div>
        <div class="form-group">
            <label for="noteAuthor">author</label>
            <input type="author" class="form-control" id="note-author" placeholder="enter the author's first and last name">
        </div>
        <div class="form-group">
            <label for="noteTitle">field</label>
            <input type="field" class="form-control" id="note-field" placeholder="field or sub-discipline">
        </div>
        <div class="form-group">
            <label for="textarea">argument</label>
            <textarea class="form-control" id="argument" rows="5" placeholder="what is the main argument?"></textarea>
        </div>
         <div class="form-group">
            <label for="textarea">examples</label>
            <textarea class="form-control" id="examples" rows="5" placeholder="identify and explain key examples from the text that reinforce the author's main argument"></textarea>
        </div>
        <div class="form-group">
            <label for="textarea">methodology</label>
            <textarea class="form-control" id="methods" rows="5" placeholder="describe the author's methods and sources. what are their theories and frameworks? how is evidence used and sources read?"></textarea>
        </div>
        <div class="form-group">
            <label for="noteKeywords">keywords</label>
            <input type="title" class="form-control" id="note-keywords" placeholder="list out the main keywords and concepts">
        </div>
            <div class="form-group">
            <label for="textarea">significance</label>
            <textarea class="form-control" id="significance" rows="5" placeholder="what interventions does this book make and in which fields? what is unique about the argument, evidence, methods, or sources? why is this book significant, or why not?"></textarea>
        </div>
        <div class="text-center">
             <button class="btn btn-outline-primary" type="submit">save note</button>
        </div>
    </form>

